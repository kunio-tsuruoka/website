---
import Layout from '@/layouts/layout.astro';
import { Header } from '../components/header';

const works = [
  {
    title: '大規模ECサイトのリニューアル',
    description:
      'クライアントのニーズに合わせたカスタムデザインと機能を実装し、UXを大幅に向上させました。',
    image: '/images/works/ecommerce.jpg',
  },
  {
    title: '教育アプリの開発',
    description:
      '学習者のモチベーションを高めるためのゲーミフィケーション要素を含むアプリを開発しました。',
    image: '/images/works/education.jpg',
  },
  {
    title: 'BtoB向け業務管理システムの構築',
    description:
      '業務効率化のためのカスタムツールを提供し、クライアントの生産性向上をサポートしました。',
    image: '/images/works/b2b.jpg',
  },
];
---

<Layout title="実績紹介 | Beekle">
  <Header client:load />
  <main class="pt-20">
    <!-- Hero Section -->
    <section class="relative py-32 bg-gradient-to-br from-indigo-600 to-purple-600">
      <div class="absolute inset-0 bg-grid-pattern opacity-10"></div>
      <div class="container mx-auto px-8">
        <h1 class="text-4xl md:text-6xl font-bold text-white text-center mb-8">
          WORKS
        </h1>
        <p class="text-xl text-white/90 text-center max-w-3xl mx-auto leading-relaxed">
          Beekleがこれまでに手掛けた実績の一部をご紹介します。様々な分野で成果を上げてきたプロジェクトの詳細をご覧ください。
        </p>
      </div>
    </section>

    <!-- Works Section -->
    <section class="py-32 bg-gray-50">
      <div class="container mx-auto px-8">
        <h2 class="text-3xl font-bold text-center mb-16">実績一覧</h2>
        <div class="grid md:grid-cols-3 gap-12">
          {works.map(({ title, description, image }) => (
            <div class="bg-white rounded-xl shadow-lg overflow-hidden">
              <img
                src={image}
                alt={title}
                class="w-full h-48 object-cover"
              />
              <div class="p-6">
                <h3 class="text-2xl font-bold text-gray-800 mb-4">{title}</h3>
                <p class="text-gray-600 leading-relaxed">{description}</p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
  .bg-grid-pattern {
    background-image: linear-gradient(rgba(255, 255, 255, 0.1) 1px, transparent 1px),
      linear-gradient(90deg, rgba(255, 255, 255, 0.1) 1px, transparent 1px);
    background-size: 20px 20px;
  }
</style>