---
import Layout from '@/layouts/layout.astro';
import { Header } from '../components/header';
import { Section, SectionHeader } from '../components/ui/section';
import { Card, CardTitle, CardDescription } from '../components/ui/card';
import { ButtonLink } from '../components/ui/button';
import { PageHero } from '../components/ui/page-hero';

const works = [
  {
    title: '大規模ECサイトのリニューアル',
    description:
      'クライアントのニーズに合わせたカスタムデザインと機能を実装し、UXを大幅に向上させました。',
    image: '/images/works/ecommerce.jpg',
  },
  {
    title: '教育アプリの開発',
    description:
      '学習者のモチベーションを高めるためのゲーミフィケーション要素を含むアプリを開発しました。',
    image: '/images/works/education.jpg',
  },
  {
    title: 'BtoB向け業務管理システムの構築',
    description:
      '業務効率化のためのカスタムツールを提供し、クライアントの生産性向上をサポートしました。',
    image: '/images/works/b2b.jpg',
  },
];
---

<Layout title="実績紹介 | Beekle">
  <Header client:load />
  <main class="pt-20">
    <!-- Hero Section -->
    <PageHero
      englishTitle="WORKS"
      title="実績紹介"
      subtitle="Beekleがこれまでに手掛けた実績の一部をご紹介します。様々な分野で成果を上げてきたプロジェクトの詳細をご覧ください。"
    />

    <!-- Works Section -->
    <Section variant="lightPurple" padding="lg" decoration="blursMix">
      <SectionHeader
        number="01"
        label="Projects"
        title="実績一覧"
        subtitle="多様な業界でのプロジェクト経験"
      />

      <div class="grid md:grid-cols-3 gap-8">
        {works.map(({ title, description, image }, index) => (
          <Card variant="white" padding="none" hover="lift" decoration="dots">
            <div class="aspect-video bg-neutral-100 overflow-hidden rounded-t-[32px]">
              <img
                src={image}
                alt={title}
                class="w-full h-full object-cover"
              />
            </div>
            <div class="p-8">
              <span class="font-Poppins text-4xl font-bold text-primary-500/20 block mb-2">
                {String(index + 1).padStart(2, '0')}
              </span>
              <CardTitle className="text-2xl mb-4">{title}</CardTitle>
              <CardDescription>{description}</CardDescription>
            </div>
          </Card>
        ))}
      </div>
    </Section>

    <!-- CTA Section: Primary背景でブランドカラーを強調 -->
    <Section variant="primary" padding="lg" decoration="fullDark">
      <div class="text-center">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
          プロジェクトのご相談
        </h2>
        <p class="text-lg text-white/90 mb-8 max-w-2xl mx-auto">
          あなたのプロジェクトについてお聞かせください
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <ButtonLink href="/contact" variant="white" size="lg">
            お問い合わせ
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
            </svg>
          </ButtonLink>
          <ButtonLink href="/prooffirst" variant="outline" size="lg">
            ゼロスタートを見る
          </ButtonLink>
        </div>
      </div>
    </Section>
  </main>
</Layout>
