---
import { Header } from '../components/header';
import Layout from '../layouts/layout.astro';

const materials = [
  {
    title: 'ワンテクワールドd-popsアライアンス',
    description: '弊社はワンテクワールドという開発アライアンスを組んで開発を行っています。その関連資料になります。',
    fileName: 'ワンテクワールドd-popsアライアンス.pdf',
    fileUrl: '/pdf/ワンテクワールドd-popsアライアンス.pdf',
    category: '提携資料',
  },
];
---

<Layout title="関連資料 | Beekle">
  <Header client:load />
  <main class="pt-20">
    <section class="bg-gradient-to-br from-indigo-600 to-purple-600 py-20">
      <div class="mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl text-center">
        <h1 class="text-4xl font-bold text-white sm:text-5xl mb-6">
          関連資料
        </h1>
        <p class="text-xl text-white/90 max-w-3xl mx-auto">
          各種資料をダウンロードいただけます
        </p>
      </div>
    </section>

    <section class="mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl py-16">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {materials.map((material) => (
          <div class="bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300">
            <div class="p-8">
              {/* カテゴリバッジ */}
              <div class="mb-4">
                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-indigo-100 text-indigo-800">
                  {material.category}
                </span>
              </div>

              {/* タイトル */}
              <h2 class="text-xl font-bold text-gray-900 mb-3">
                {material.title}
              </h2>

              {/* 説明 */}
              <p class="text-gray-600 mb-6 min-h-[48px]">
                {material.description}
              </p>

              {/* ダウンロードボタン */}
              <a
                href={material.fileUrl}
                download={material.fileName}
                class="inline-flex items-center justify-center w-full px-6 py-3 text-base font-medium text-white bg-indigo-600 rounded-lg hover:bg-indigo-700 transition-colors duration-200"
              >
                <svg
                  class="w-5 h-5 mr-2"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
                  />
                </svg>
                ダウンロード
              </a>
            </div>
          </div>
        ))}
      </div>

      {/* CTA セクション */}
      <div class="mt-24 text-center pb-16">
        <h2 class="text-3xl font-bold text-gray-900">お気軽にお問い合わせください</h2>
        <p class="mt-4 text-xl text-gray-600">
          資料に関するご質問やご相談はこちらから
        </p>
        <div class="mt-8">
          <a
            href="/contact"
            class="inline-flex items-center justify-center px-8 py-4 text-lg font-medium text-white bg-indigo-600 border border-transparent rounded-full hover:bg-indigo-700"
          >
            お問い合わせ
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
            </svg>
          </a>
        </div>
      </div>
    </section>
  </main>
</Layout>
